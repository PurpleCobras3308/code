<!--Header for Navigation-->
<%- include ../layouts/header.ejs %>

<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>

<!--Create a form to take input from user-->
<form action="/core/post" method="post" name="form1">
    <table width="25%" border="0">
        <tr>
            <td>Email</td>
            <td><input type="text" name="name" id="username" value="<%= username %>"></td>
        </tr>
        <tr>
            <td>School</td>
            <td><input type="text" name="school" value="<%= school %>" placeholder="University of Colorado"></td>
        </tr>
        <tr>
            <td>Class</td>
            <td><input type="text" name="class" value="<%= class %>" placeholder="MATH1300"></td>
        </tr>
        <tr>
            <td>Availability</td>
            <td><input type="submit" name="Submit" value="Add" placeholder="5:00PM-7:00PM"></td>
        </tr>
    </table>
</form>

<%- include ../layouts/footer.ejs %>